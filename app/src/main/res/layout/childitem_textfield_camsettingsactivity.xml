<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/CamSetting_horizMargin"
    android:layout_marginStart="@dimen/CamSetting_horizMargin"
    android:layout_marginTop="@dimen/CamSetting_vertMargin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_tv_discription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/ListView_childItem_horizMargin"
        android:inputType="none"/>

    <EditText
        android:id="@+id/tv_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/ListView_childItem_horizMargin"
        android:textAlignment="viewEnd"
        android:maxLines="1"
        android:inputType="textCapCharacters"
        android:textStyle="bold"


        />
</RelativeLayout>