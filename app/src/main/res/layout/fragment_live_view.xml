<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Black"
                tools:context="com.example.mail.OlyAirONE.LiveViewFragment">

    <view
        android:id="@+id/cameraLiveImageView"
        class="com.example.mail.OlyAirONE.CameraLiveImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        />

    <ImageButton
        android:id="@+id/ib_RecordMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/LiveViewTopMarg"
        android:src="@drawable/ic_iautomode"/>


    <LinearLayout
        android:id="@+id/ll_remainingPicAndStuff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/LiveViewTopMarg"
        android:layout_toStartOf="@id/ib_RecordMode"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_focusMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="S-AF"
            android:textColor="@color/button_text_states"
            android:textSize="@dimen/Icon_discription_txt"/>

        <ImageView
            android:id="@+id/iv_sdCardIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:scaleType="center"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/ic_sdcard"/>

        <TextView
            android:id="@+id/tv_SdCardSpaceRemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="0002"
            android:textColor="@color/button_text_states"
            android:textSize="@dimen/Icon_discription_txt"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_timeLapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_remainingPicAndStuff"
        android:layout_toLeftOf="@id/ib_RecordMode"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timelapse:"
                android:layout_marginRight="@dimen/textspacer_smalltxt"
                android:textAlignment="gravity"
                android:textColor="@color/button_text_states"
                android:textSize="@dimen/small_txt"/>

            <TextView
                android:id="@+id/tv_tl_doneImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/button_text_states"
                android:textSize="@dimen/small_txt"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/button_text_states"
                android:textSize="@dimen/small_txt"
                />

            <TextView
                android:id="@+id/tv_tl_totalImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:textColor="@color/button_text_states"
                android:textSize="@dimen/small_txt"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="interval:"
                android:layout_marginRight="@dimen/textspacer_smalltxt"
                android:textColor="@color/button_text_states"
                android:textSize="@dimen/small_txt"/>

            <TextView
                android:id="@+id/tv_tl_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/button_text_states"
                android:textSize="@dimen/small_txt"
                android:text="120"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textspacer_smalltxt"
                android:textColor="@color/button_text_states"
                android:textSize="@dimen/small_txt"
                android:text="sec"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tl_nextCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/textspacer_smalltxt"
        android:layout_marginTop="@dimen/textspacer_smalltxt"
        android:background="@color/BgPrim_HalfTransp_Grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textspacer_smalltxt"
            android:layout_marginRight="@dimen/textspacer_smalltxt"
            android:textColor="@color/button_text_states"
            android:textSize="@dimen/small_txt"
            android:text="next capture in:"/>

        <TextView
            android:id="@+id/tv_tl_nextCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/button_text_states"
            android:textSize="@dimen/small_txt"
            android:text="50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textspacer_smalltxt"
            android:layout_marginRight="@dimen/textspacer_smalltxt"
            android:textColor="@color/button_text_states"
            android:textSize="@dimen/small_txt"
            android:text="sec"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/LiveViewTopMarg"
        android:layout_toRightOf="@id/ll_batteryAndStuff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Recording"
            android:textColor="@color/button_text_states"
            android:textSize="@dimen/Icon_discription_txt"/>

        <ImageView
            android:id="@+id/iv_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/anim_recordingblinking"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_batteryAndStuff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/LiveViewTopMarg"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/batteryLevelImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/tt_icn_battery_charge"/>

        <TextView
            android:id="@+id/tv_RecordType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:textColor="@color/button_text_states"
            android:textSize="@dimen/Icon_discription_txt"/>

        <ImageView
            android:id="@+id/iv_Bracketing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_no_aeb"/>
    </LinearLayout>

</RelativeLayout>
