<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="9"
    >
    <TextView
        android:id="@+id/tv_Title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:text="Olympus Air One"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="@dimen/buttonelevation"
        android:text="Camera"
        android:layout_weight="3"/>

    <Button
        android:id="@+id/btnViewImages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="@dimen/buttonelevation"
        android:text="View Pictures"
        android:layout_weight="2"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="2"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_turnOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/buttonelevation"
            android:layout_weight="1"
            android:text="Turn Cam On"/>
        <Button
            android:id="@+id/btn_turnOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/buttonelevation"
            android:layout_weight="1"
            android:text="Turn Cam off"/>

    </LinearLayout>
    <Button
        android:id="@+id/btnCamSettings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="@dimen/buttonelevation"
        android:text="Camera Settings"
        android:layout_weight="2"/>
</LinearLayout>
