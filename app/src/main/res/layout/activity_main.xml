<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_MainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/ll_topBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_FocusMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S-AF"/>

        <ImageView
            android:id="@+id/iv_sdCardIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/ic_sdcard"/>

        <TextView
            android:id="@+id/tv_SdCardSpaceRemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2345"/>

        <ImageButton
            android:id="@+id/ib_RecordMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_recordmode_m"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/cameraLiveImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"/>

    <FrameLayout
        android:id="@+id/fl_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cameraLiveImageView"
        >

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"

        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_modesettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="10"
            >

            <TextView
                android:id="@+id/tv_shutter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="1/50"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_aparture"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:text="F8"
                android:textColor="@color/colorText"/>

            <LinearLayout
                android:id="@+id/ll_exposurecomp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_expoffset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="+0.3"
                    android:textColor="@color/colorText"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="8"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="-"
                        android:textColor="@color/colorText"/>

                    <com.example.mail.fragmenttest.ExposureCorrection
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="6"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"

                        android:text=" +"
                        android:textColor="@color/colorText"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_iso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_isotext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ISO"
                    android:textAlignment="center"
                    android:textColor="@color/colorText"/>

                <TextView
                    android:id="@+id/tv_isoval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:textAlignment="center"
                    android:textColor="@color/colorText"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_whitebalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_wbtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="WB"
                    android:textColor="@color/colorText"/>

                <TextView
                    android:id="@+id/tv_wbval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="2000"
                    android:textColor="@color/colorText"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shutterreletc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <ImageButton
                android:id="@+id/ib_drivemode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:srcCompat="@drawable/icn_drive_setting_seq_l"/>

            <ImageButton
                android:id="@+id/ib_shutterrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:srcCompat="@drawable/btn_shutter"/>

            <ImageButton
                android:id="@+id/ib_metering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:srcCompat="?attr/actionModeSelectAllDrawable"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


