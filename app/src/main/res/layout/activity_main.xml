<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary">


        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:text="Olympus Air One"
            android:textColor="@color/BarText"
            android:textStyle="bold"
            android:textSize="25dp"
            />

        <ImageView
            android:id="@+id/btn_turnOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/GridView_borderMargin"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_power_settings_new_white_36dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/GridView_borderMargin"
        android:layout_marginVertical="@dimen/GridView_borderMargin"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/iv_Camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:tintMode="multiply"
            android:src="@drawable/ic_olyairshoot"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/btn_camera"
            android:textSize="50dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/GridView_borderMargin"
        android:layout_marginVertical="@dimen/GridView_borderMargin"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/iv_viewImages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:tintMode="multiply"
            android:src="@drawable/ic_olyairimageview"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="View Pictures"
            android:textSize="40dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/GridView_borderMargin"
        android:layout_marginVertical="@dimen/GridView_borderMargin"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/iv_CamSettings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Btn_bg"
            android:scaleType="fitCenter"
            android:tintMode="multiply"
            android:src="@drawable/ic_olyairsettings"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Settings"
            android:textSize="40dp"
            android:textStyle="bold"/>

    </RelativeLayout>

</LinearLayout>
