<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_MainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    >

    <FrameLayout
        android:id="@+id/fl_FragCont_Trigger"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/BgPrim_HalfTransp_Grey"
        >
    </FrameLayout>


    <FrameLayout
        android:id="@+id/fl_FragCont_cameraLiveImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/fl_FragCont_Trigger"
        android:contentDescription="main screen"
        android:src="@drawable/common_full_open_on_phone"/>


    <FrameLayout
        android:id="@+id/fl_FragCont_Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/fl_FragCont_Trigger"
        android:background="@color/BgPrim_HalfTransp_Grey"/>

    <FrameLayout
        android:id="@+id/fl_FragCont_ExpApart1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/fl_FragCont_Settings"
        android:layout_toLeftOf="@id/fl_FragCont_Trigger"
        />
    <FrameLayout
        android:id="@+id/fl_FragCont_ExpApart2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@id/fl_FragCont_ExpApart1"
        android:layout_toLeftOf="@id/fl_FragCont_Trigger"
        />
</RelativeLayout>


