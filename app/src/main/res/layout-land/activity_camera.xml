<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_MainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.9"
            >
            <FrameLayout
                android:id="@+id/fl_FragCont_cameraLiveImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="main screen"
                android:src="@drawable/common_full_open_on_phone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/fl_FragCont_Settings"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/BgPrim_HalfTransp_Grey"
                    />

                <FrameLayout
                    android:id="@+id/fl_FragCont_ExpApart1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_above="@+id/fl_FragCont_Settings"
                    />

                <FrameLayout
                    android:id="@+id/fl_FragCont_ExpApart2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_above="@id/fl_FragCont_ExpApart1"
                    />
            </RelativeLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_FragCont_Trigger"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="0.1"
            android:background="@color/BgPrim_HalfTransp_Grey"
            />
    </LinearLayout>





</RelativeLayout>


